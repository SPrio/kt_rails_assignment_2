<%= form_for @client do |form| %>
  <%= render :partial => "shared/error", locals: {var: @client} %>
  <p>
    <%= form.label :name %>
    <br>
    <%= form.text_field :name , required: true %>
  </p>
  <p>
    <%= form.label :email %>
    <br>
    <%= form.email_field :email , required: true%>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>